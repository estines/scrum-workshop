<!-- Course Listing Section -->
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 fw-bold">Available Courses</h2>
                <span class="badge bg-secondary fs-6"><%= courses.length %> Course<%= courses.length !== 1 ? 's' : '' %></span>
            </div>
            
            <% if (error) { %>
            <div class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <%= error %>
            </div>
            <% } %>
            
            <% if (courses.length === 0 && !error) { %>
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-journals display-1 text-muted"></i>
                </div>
                <h3 class="text-muted">No courses available</h3>
                <p class="text-muted">Please check back later for new courses.</p>
            </div>
            <% } %>
            
            <div class="row g-4">
                <% courses.forEach(course => { %>
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column">
                            <div class="mb-3">
                                <span class="badge bg-primary mb-2"><%= course.categoryName || 'Uncategorized' %></span>
                                <h5 class="card-title fw-bold"><%= course.title %></h5>
                            </div>
                            
                            <p class="card-text text-muted flex-grow-1"><%= course.description %></p>
                            
                            <% if (course.modules) { %>
                            <div class="mt-3">
                                <h6 class="fw-semibold mb-2">Course Modules:</h6>
                                <p class="small text-secondary"><%= course.modules %></p>
                            </div>
                            <% } %>
                            
                            <div class="mt-auto pt-3">
                                <button class="btn btn-outline-primary btn-sm w-100 course-details-btn"
                                        data-course-id="<%= course.id %>"
                                        data-course-title="<%= course.title %>"
                                        data-course-description="<%= course.description %>"
                                        data-course-category="<%= course.categoryName || 'Uncategorized' %>"
                                        data-course-modules="<%= course.modules || '' %>">
                                    View Details
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>